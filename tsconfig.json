{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "outDir": "./dist",
    "module": "CommonJS"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
